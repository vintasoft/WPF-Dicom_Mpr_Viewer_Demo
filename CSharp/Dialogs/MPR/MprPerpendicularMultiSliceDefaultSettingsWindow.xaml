<Window x:Class="WpfDicomMprViewerDemo.MprPerpendicularMultiSliceDefaultSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDicomMprViewerDemo"
        mc:Ignorable="d"
        xmlns:CustomControls="clr-namespace:WpfDemosCommonCode.CustomControls"
        Title="Perpendicular Multislice Default Settings" Height="186" Width="290">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Slice Count</Label>
        <CustomControls:NumericUpDown 
                    Grid.Row="0" Grid.Column="1"
                    Margin="3" Height="23"
                    Minimum="2" Maximum="200"
                    x:Name="sliceCountNumericUpDown"/>

        <Label Grid.Row="1" Grid.Column="0">Planar Slice Margin</Label>
        <CustomControls:PaddingFEditorControl Grid.Row="1" Grid.Column="1" x:Name="planarSliceMarginPaddingFEditorControl" />

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,6,0,0">
            <Button Margin="3" Width="75" Height="23" IsDefault="True" Click="Button_Click">OK</Button>
            <Button Margin="3" Width="75" Height="23" IsCancel="True">Calnel</Button>
        </StackPanel>
    </Grid>
</Window>
