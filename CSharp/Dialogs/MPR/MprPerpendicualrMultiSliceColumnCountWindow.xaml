<Window x:Class="WpfDicomMprViewerDemo.MprPerpendicualrMultiSliceColumnCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDicomMprViewerDemo"
        mc:Ignorable="d"
        xmlns:CustomControls="clr-namespace:WpfDemosCommonCode.CustomControls"
        Title="Perpendicualr Multi Slice" Height="100" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Column Count</Label>
        <CustomControls:NumericUpDown 
                    Grid.Column="1" Grid.Row="0"
                    Height="23"
                    DecimalPlaces="3"
                    Margin="3,3,3,3"
                    Maximum="99"
                    Minimum="1"
                    Value="1"
                    Increment="1"
                    Width="75"
                    x:Name="columnCountNumericUpDown"/>

        <Button Grid.Column="0" Grid.Row="1" Width="75" Height="23" IsDefault="True" HorizontalAlignment="Right" Margin="3" Click="okButton_Click">OK</Button>
        <Button Grid.Column="1" Grid.Row="1" Width="75" Height="23" IsCancel="True" Margin="3">Cancel</Button>
    </Grid>
</Window>
